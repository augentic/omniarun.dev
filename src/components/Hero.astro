const heroCode = `<span class="token-keyword">use</span> omnia_sdk::{<span class="token-type">Config</span>, <span class="token-type">HttpRequest</span>, <span class="token-type">Result</span>};
<span class="token-keyword">use</span> omnia_sdk::api::{<span class="token-type">Context</span>, <span class="token-type">Handler</span>, <span class="token-type">Reply</span>};

<span class="token-keyword">async fn</span> <span class="token-fn">handle</span>&lt;<span class="token-type">P</span>&gt;(
    owner: &amp;<span class="token-keyword">str</span>,
    req: <span class="token-type">MyRequest</span>,
